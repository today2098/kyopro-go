{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Go: build active file",
			"type": "shell",
			"command": "go",
			"args": [
				"build",
				"-o",
				"${workspaceFolder}/debug.out",
				"${file}"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$go"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
		}
	]
}